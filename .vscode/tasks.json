{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "$(run) Run API",
            "type": "shell",
            "command": "cd ${workspaceFolder}/src/backend && uv run main.py"
        },
        {
            "label": "$(run) Run Frontend",
            "type": "shell",
            "command": "cd ${workspaceFolder}/src/frontend && pnpm dev"
        },
        // Run all
        {
            "label": "$(run-all) Run All",
            "dependsOn": [
                "$(run) Run API",
                "$(run) Run Frontend"
            ],
            "dependsOrder": "parallel",
            "problemMatcher": []
        },
        {
            "label": "$(trash) Delete DB",
            "type": "shell",
            "command": "cd ${workspaceFolder}/src/backend/data && rm database.db"
        },
        {
            "label": "$(database) Populate DB",
            "type": "shell",
            "command": "cd ${workspaceFolder}/src/tests && python populate_db.py"
        }
    ]
}