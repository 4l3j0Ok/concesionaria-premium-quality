---
// Skeleton card para mostrar mientras cargan los autos
---

<div class="skeleton-card">
    <div class="skeleton-image"></div>
    <div class="skeleton-title"></div>
    <div class="skeleton-price"></div>
    <div class="skeleton-details"></div>
</div>

<style>
    .skeleton-card {
        background-color: #fff;
        border-radius: var(--border-radius);
        padding: 1em;
        box-shadow: var(--box-shadow);
        min-width: 200px;
        display: flex;
        flex-direction: column;
        gap: 0.5em;
        animation: pulse 1.5s ease-in-out infinite;
    }

    .skeleton-image {
        width: 100%;
        aspect-ratio: 16 / 9;
        background: linear-gradient(
            90deg,
            #f0f0f0 25%,
            #e0e0e0 50%,
            #f0f0f0 75%
        );
        background-size: 200% 100%;
        border-radius: var(--border-radius);
        animation: shimmer 2s infinite;
    }

    .skeleton-title {
        width: 70%;
        height: 1.5em;
        background: linear-gradient(
            90deg,
            #f0f0f0 25%,
            #e0e0e0 50%,
            #f0f0f0 75%
        );
        background-size: 200% 100%;
        border-radius: 4px;
        margin-top: 0.5em;
        animation: shimmer 2s infinite;
    }

    .skeleton-price {
        width: 50%;
        height: 1.2em;
        background: linear-gradient(
            90deg,
            #f0f0f0 25%,
            #e0e0e0 50%,
            #f0f0f0 75%
        );
        background-size: 200% 100%;
        border-radius: 4px;
        animation: shimmer 2s infinite;
    }

    .skeleton-details {
        width: 60%;
        height: 1em;
        background: linear-gradient(
            90deg,
            #f0f0f0 25%,
            #e0e0e0 50%,
            #f0f0f0 75%
        );
        background-size: 200% 100%;
        border-radius: 4px;
        animation: shimmer 2s infinite;
    }

    @keyframes shimmer {
        0% {
            background-position: 200% 0;
        }
        100% {
            background-position: -200% 0;
        }
    }

    @keyframes pulse {
        0%,
        100% {
            opacity: 1;
        }
        50% {
            opacity: 0.95;
        }
    }
</style>
