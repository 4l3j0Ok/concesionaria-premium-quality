---
import { Image } from "astro:assets";
import CarImage from "../assets/images/chevrolet-astra.webp";
import type { Car } from "../types/car";

interface Props {
  car: Car;
}

const { car }: { car: Car } = Astro.props;
---

<main>
  <a href={`/cars/${car.code}`} class="car-link">
    <div
      class="car"
      id={`${car.brand}-${car.model}`}
      style={`view-transition-name: car-card-${car.code}`}
    >
      {
        car.img && car.img.startsWith("data:") ? (
          <img
            src={car.img}
            alt={`${car.brand} ${car.model}`}
            class="car-image"
            loading="lazy"
            decoding="async"
            style={`view-transition-name: image-${car.code}`}
          />
        ) : (
          <Image
            src={CarImage}
            alt={`Imagen de ${car.brand} ${car.model}`}
            class="car-image"
            loading="lazy"
          />
        )
      }
      <h2 style={`view-transition-name: car-name-${car.code}`}>
        {car.brand}
        {car.model}
      </h2>
      <div class="price-container">
        {
          car.promotionPrice && car.promotionPrice < car.price ? (
            <>
              <p class="old-price">${car.price.toLocaleString()}</p>
              <p class="price">${car.promotionPrice.toLocaleString()}</p>
            </>
          ) : (
            <p class="price">${car.price.toLocaleString()}</p>
          )
        }
      </div>
      <p class="car-details">
        {car.year} â€¢ {car.km.toLocaleString()} km
      </p>
    </div>
  </a>
</main>

<style>
  .car {
    background-color: #fff;
    border-radius: var(--border-radius);
    padding: 1em;
    box-shadow: var(--box-shadow);
    min-width: 200px;
    display: flex;
    flex-direction: column;
    gap: 0.5em;
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;
  }

  .car:hover {
    transform: translateY(-5px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
  }

  .car img {
    width: 100%;
    height: auto;
    aspect-ratio: 16 / 9;
    object-fit: cover;
    border-radius: var(--border-radius);
  }

  .car-link {
    text-decoration: none;
    color: inherit;
  }

  .car h2 {
    font-size: 1.5rem;
    margin: 0.5em 0 0.25em 0;
  }

  .price-container {
    display: flex;
    flex-direction: column;
    gap: 0.25em;
  }

  .car .old-price {
    text-decoration: line-through;
    color: var(--text-color-light);
    font-size: 0.9em;
    margin: 0;
  }

  .car .price {
    color: var(--primary-color);
    font-weight: bold;
    font-size: 1.3em;
    margin: 0;
  }

  .car-details {
    color: #666;
    font-size: 0.9em;
    margin: 0;
  }
</style>
