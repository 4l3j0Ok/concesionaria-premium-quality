import { Image } from "astro:assets";
import carImage from "../assets/images/white-toyota-transparent.png";
---

<section class="services">
  <article class="service-card">
    <div class="service-car">
      <Image src={carImage} alt="Auto blanco" />
    </div>
    <div class="description">
      <h3>Financi치 tu auto</h3>
